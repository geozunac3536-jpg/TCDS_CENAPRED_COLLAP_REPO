{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TCDS Data Packet",
  "type": "object",
  "required": [
    "packet_id",
    "created_utc",
    "source",
    "signals",
    "integrity"
  ],
  "properties": {
    "packet_id": {
      "type": "string",
      "minLength": 8
    },
    "created_utc": {
      "type": "string",
      "format": "date-time"
    },
    "license": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": [
        "org",
        "device_class"
      ],
      "properties": {
        "org": {
          "type": "string"
        },
        "team": {
          "type": "string"
        },
        "device_class": {
          "type": "string"
        },
        "station_id": {
          "type": "string"
        },
        "firmware": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "event_hint": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "lat": {
          "type": "number"
        },
        "lon": {
          "type": "number"
        },
        "t0_utc": {
          "type": "string",
          "format": "date-time"
        },
        "window_seconds": {
          "type": "number"
        }
      },
      "additionalProperties": true
    },
    "signals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "t_start_utc",
          "sample_rate_hz",
          "samples"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "units": {
            "type": "string"
          },
          "t_start_utc": {
            "type": "string",
            "format": "date-time"
          },
          "sample_rate_hz": {
            "type": "number",
            "minimum": 0.01
          },
          "samples": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "attachments": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "integrity": {
      "type": "object",
      "required": [
        "sha256_packet"
      ],
      "properties": {
        "sha256_packet": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$"
        },
        "sha256_attachments": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$"
          }
        },
        "signatures": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
